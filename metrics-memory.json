# memory metrics collection
{
  "checks": {
    "metrics_memory-usage": {
      "type": "metric",
      "command": "metrics-memory.rb --scheme :::name:::.memory_usage",
      "interval": 60,
      "output_format": "graphite_plaintext",
      "subscribers": [ "development" ],
      "handlers": [ "graphite" ]
    }
  }
}